doctype html
extends layout


block content
  h1= title
  p Welcome to #{title}

    p #{"Hello Selassie !"}

  div
    a(href="/biberons") liste de biberons
    br
    a(href="/allaitement") liste des têtées
    br
    a(href="/repas") liste des repas solides
    br
  h2 Liste de courses


  div(ng-controller='ListeCourses')
    ul
      li(ng-repeat="course in liste")
        input(type='checkbox', ng-model='course.done')
        span(class='done-{{course.done}}') {{course.text}}

    ul
      li(ng-repeat="course in liste")
        | course : {{course.text}}
        br

    form(ng-submit='addCourses()')
      input(type='text', ng-model='texte', size='30', placeholder='ajouter nouvel ingrédient')
      input(class='btn-primary', type='submit', value='ajouter')
